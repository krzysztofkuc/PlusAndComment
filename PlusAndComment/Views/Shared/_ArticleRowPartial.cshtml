@model PlusAndComment.Models.ArticleVM

<div class="container">
    <div class="row" style="margin-left: 50px; max-width: 900px; position: relative; background-color: #6b8694; border-radius: 5px">
            <div class="col-md-2" style="background-color: black;">
                @*<div class="thumbnail" style="background-color: #6b8694; margin: 8px 8px 8px 8px; border-color: #D87904;"></div>*@
                <img src="@Url.Content(Model.RelThumbPath)" style="max-width:150px; max-height:130px;" />
            </div>
            <div class="col-md-10" style="height: 100%;position: absolute;right: 0;top: 0;">
                <div class="pull-left">
                    <h4 style="float: left">@Html.DisplayFor(m => m.Header)</h4>

                    <div style="color: #b8c5cc;">
                        @if (Model.LongDesc.Length > 700)
                        {
                            <label>
                                @Model.LongDesc.Substring(0, 700)...
                            </label>
                        }
                        else
                        {
                            <label>
                                @Model.LongDesc
                            </label>
                        }
                    </div>
                    <div class="pull-left" style="word-wrap: break-word;">
                        <a href=@Model.Url>@Model.Url</a>
                    </div>
                </div>
            </div>
        </div>
</div>